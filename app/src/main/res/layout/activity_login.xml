<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".activities.LoginActivity">

    <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:cardCornerRadius="13dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            android:layout_centerInParent="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:orientation="vertical">

            <TextView
                    android:text="Login"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginLeft="50dp"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:paddingEnd="30dp"
                    android:paddingStart="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/edt_loginEmail"
                        android:background="@drawable/selector_bg_edit_2"
                        android:hint="Enter Email"
                        android:padding="10dp"
                        android:inputType="textEmailAddress"
                        android:textSize="14sp"
                        android:paddingBottom="2dp"
                        android:textCursorDrawable="@drawable/bg_input_cursor_2"
                        android:textColor="#f0f7f4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <EditText
                        android:id="@+id/edt_loginPassword"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/selector_bg_edit_2"
                        android:hint="Enter Password"
                        android:padding="10dp"
                        android:inputType="textPassword"
                        android:textColor="#f0f7f4"
                        android:textCursorDrawable="@drawable/bg_input_cursor_2"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <Button
                        android:id="@+id/btn_loginLogin"
                        android:background="@drawable/bt_shape"
                        android:stateListAnimator="@drawable/state_list_animator_z"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:text="Login"
                        android:textColor="#d3d3d3"
                        android:layout_width="150dp"
                        android:layout_height="50dp" android:layout_marginLeft="40dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>