<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".activities.MainActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/red_alert_logo_transparent"
            android:id="@+id/imageView4" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="LOG IN"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_mainLogIn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.502" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            android:background="@color/colorAccent"
            android:textColor="@color/grey_100"/>
    <Button
            android:text="Sign UP"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_mainSignUp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_mainLogIn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@color/colorAccent"
            android:textColor="@color/grey_100"/>
</androidx.constraintlayout.widget.ConstraintLayout>