<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:background="@drawable/bg"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".activities.Signup3Activity">
    <android.support.v7.widget.CardView
            android:layout_width="395dp"
            android:layout_height="442dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"

            app:cardCornerRadius="14dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter User Information"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Profile Picture"
                      android:textSize="18sp"
                      android:layout_marginTop="8dp"
                      app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                      android:layout_marginStart="8dp" android:id="@+id/textView4"/>
            <ImageView android:layout_width="100dp" android:layout_height="100dp"
                       android:src="@drawable/default_avata"
                       android:id="@+id/img_signup3UserPicture"
                       android:layout_marginTop="16dp"
                       app:layout_constraintTop_toBottomOf="@+id/textView4"
                       app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                       android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                       android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            />
            <TextView
                    android:text="Emergency Contact Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    app:layout_constraintTop_toBottomOf="@+id/img_signup3UserPicture" android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"/>
            <Button
                    android:id="@+id/btn_signup3AddPhoneNumber"
                    android:layout_width="160dp"
                    android:layout_height="45dp"
                    android:background="@drawable/bt_shape"
                    android:stateListAnimator="@drawable/state_list_animator_z"
                    android:text="Add Phone Number"
                    android:textColor="#d3d3d3" android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    app:layout_constraintTop_toBottomOf="@+id/listView_signup3EmergencyContacts"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            />
            <Button
                    android:id="@+id/btn_signup3CreateAccount"
                    android:layout_width="160dp"
                    android:layout_height="45dp"
                    android:background="@drawable/bt_shape"
                    android:stateListAnimator="@drawable/state_list_animator_z"
                    android:text="Create Account"
                    android:textColor="#d3d3d3" android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/btn_signup3AddPhoneNumber"
            />
            <ListView
                    android:layout_width="224dp"
                    android:layout_height="80dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintHorizontal_bias="0.496"
                    android:id="@+id/listView_signup3EmergencyContacts"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>