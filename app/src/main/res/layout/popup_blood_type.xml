<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp" app:cardBackgroundColor="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    >
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:id="@+id/radioGroup_popupBloodTypeGroupPositive"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp">
                <RadioButton
                        android:text="A+"
                        android:layout_width="wrap_content"
                        android:buttonTint="#f0f7f4"
                        android:layout_height="wrap_content" android:id="@+id/radioButton_popupBloodTypeAPositive"
                        android:layout_weight="1"
                        android:textColor="#f0f7f4"/>
                <RadioButton
                        android:text="B+"
                        android:layout_width="wrap_content"
                        android:buttonTint="#f0f7f4"
                        android:layout_height="wrap_content" android:id="@+id/radioButton_popupBloodTypeBPositive"
                        android:layout_weight="1"
                        android:textColor="#f0f7f4"/>
                <RadioButton
                        android:text="AB+"
                        android:layout_width="wrap_content"
                        android:buttonTint="#f0f7f4"
                        android:layout_height="wrap_content" android:id="@+id/radioButton_popupBloodTypeABPositive"
                        android:layout_weight="1"
                        android:textColor="#f0f7f4"/>
                <RadioButton
                        android:text="O"
                        android:layout_width="wrap_content"
                        android:buttonTint="#f0f7f4"
                        android:layout_height="wrap_content" android:id="@+id/radioButton_popupBloodTypeOPositive"
                        android:layout_weight="1"
                        tools:text="O+" android:textColor="#f0f7f4"/>
            </RadioGroup>
            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/radioGroup_popupBloodTypeGroupPositive"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" android:id="@+id/radioGroup_popupBloodTypeGroupNegative">
                <RadioButton
                        android:text="A-"
                        android:layout_width="wrap_content"
                        android:buttonTint="#f0f7f4"
                        android:layout_height="wrap_content" android:id="@+id/radioButton_popupBloodTypeANegative"
                        android:layout_weight="1"
                        android:textColor="#f0f7f4"/>
                <RadioButton
                        android:text="B-"
                        android:layout_width="wrap_content"
                        android:buttonTint="#f0f7f4"
                        android:layout_height="wrap_content" android:id="@+id/radioButton_popupBloodTypeBNegative"
                        android:layout_weight="1"
                        android:textColor="#f0f7f4"/>
                <RadioButton
                        android:text="AB-"
                        android:layout_width="wrap_content"
                        android:buttonTint="#f0f7f4"
                        android:layout_height="wrap_content" android:id="@+id/radioButton_popupBloodTypeABNegative"
                        android:layout_weight="1"
                        android:textColor="#f0f7f4"/>
                <RadioButton
                        android:text="O-"
                        android:layout_width="wrap_content"
                        android:buttonTint="#f0f7f4"
                        android:layout_height="wrap_content" android:id="@+id/radioButton_popupBloodTypeONegative"
                        android:layout_weight="1"
                        android:textColor="#f0f7f4"/>
            </RadioGroup>
            <Button
                    android:text="OK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_popupBloodTypeOk" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/radioGroup_popupBloodTypeGroupPositive"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    android:background="@drawable/bt_shape"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                    android:textColor="#d3d3d3"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>